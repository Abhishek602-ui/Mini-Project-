<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item: <%= item.title %> || Ecommerce App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<style>
    * {
        margin: 0;
        padding: 0;
    }

    .c {
        margin: 2rem;
        display: flex;
        justify-content: space-around;
    }

    .Reviews {
        width: 25rem;
    }

    a {
        text-decoration: none;
        outline: none;
        color: aliceblue;
    }

    .checked {
        color: orange;
    }

    /* #rating_bar:hover>span:before {
        color: #4bce32;
    } */
    /* 
    #rating_bar>span:hover~span:before {
        color: #c7c5c5;
    } */
    #rating_bar {
        width: 100px;
        height: 100px;
        /* margin: 4px 175px !important; */
        display: inline-block;
        display: inline;
        unicode-bidi: bidi-override;
        direction: rtl;
    }

    #rating_bar>span:before {
        /* content: 'O'; */
        color: #c7c5c5;
        height: 100px;
        width: 100px;
        cursor: pointer;
        font-size: 2em;
    }

    #rating_bar>span:hover:before,
    #rating_bar span:hover~span:before {
        color: gold;
    }
    #price{
        float: right;
    }
    form{
        display: inline;
    }
</style>

<body>

    <!-- navbar -->

    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container">
          <a class="navbar-brand  text-white fs-4 " href="#">buyBest</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item ">
                <a class="nav-link active text-white fs-6" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link text-white fs-6 " href="">Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white fs-6" href="/product/new">New</a>
              </li>
            </ul>
              
            <!-- </div><div class="l "><button class="btn btn-light"><a href="/login" style="text-decoration: none; color: black;">Login</a></button></div>
            <p style="margin: auto 20px;">OR</p>
            <div class="l"><button class="btn btn-light"><a href="/register" style="text-decoration: none; color: black;">Register</a></button></div> -->
              
            <!-- <div class="div1"><i class="fa-solid fa-a" style="color: #ffffff;"></i></div> -->
            <div class="div2" ><p style="color: white; text-align: center; margin:10px ;margin-right:20px;">Hii,<span style="font-size: 1.2rem; margin-left: 5px; color: rgb(234, 84, 70);"><%= name %></span></p></div>
            <div class="btn btn-light" ><a href="/logout" style="color: black;">Logout</a></div>
          </div>
          
        </nav>


    

        <div class="container c">
            <div class="card" style="width: 25rem;">
                <img src="<%= item.thumbnail %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= item.title %> <span id="price">$<%= item.price %></span>
                    </h5>
                    <p class="card-text">
                        <%= item.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Discount : <%= item.discountPercentage %>
                    </li>
                    <li class="list-group-item">Brand : <%= item.brand %>
                    </li>
                    <li class="list-group-item">Category : <%= item.category %>
                    </li>
                </ul>
                <div class="card-body">
                    <button class="btn btn-primary" style="margin: 0 5px;"><a href="/product/<%= item.id %>/<%= name %>/buyNow" class="card-link">Buy Now</a></button>
                    <button class="btn btn-info" style="margin: 0 5px;"><a href="/product/<%= item.id %>/edit" class="card-link">Edit</a></button>
                    <form action="/product/<%= item.id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger" style="margin: 0 5px;">Delete</button>
                    </form>
                    <!-- <button class="btn btn-success"><a href="/views/cart.ejs" class="card-link">Add To Cart</a></button> -->
                </div>
            </div>
            <div class="Reviews">
                <h1>Leave Your Review</h1>
               
                <div class="mb-3">
                    <!-- <label for="exampleFormControlTextarea1" class="form-label">Description</label> -->
                    <!-- <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="reviews"></textarea> -->
                    <form action="/review/submit/<%= item.id %>/<%= name %>" method="post">
                        <input class="form-control" type="text"  aria-label="readonly input example" name="reviews">  
                    </form><br>
                    <div class="btn btn-success">Submit</div>
                </div>
                
            </div>
        </div>

        <div class="Reviews" style="position: relative; float: right; bottom: 400px; right: 330px;">
            <div class="comments">
                <!-- Sample Comment -->
                


                    <% for( let item of reviewData ) { %>
                            
                        <div class="media mb-4  ">
                            <!-- <img src="https://via.placeholder.com/64" class="mr-3 rounded-circle" alt="User Image"> -->
                            <div class="media-body">
                                <h5 class="mt-0 m-2"><%= item.name %></h5>
                                <p class="m-2"> <%= item.reviews %> </p>
                                
                            </div>

                        <% } %>
                </div>

            </div>

            
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
</body>

</html>